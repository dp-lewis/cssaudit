<!doctype html>
<html>
<head>
	<title>CSS Audit</title>
	<style>
* {
	box-sizing: border-box;
}

html {
	font-family: sans-serif;
	line-height: 1.3;
}

body {
	max-width: 60em;
	margin: auto;
	padding: 3rem 1rem 1rem;
}

h1, h2, h3, h4 {
	font-weight: normal;
}

a {
	color: #6464B2;
	text-decoration: none;
}

a:hover {
	color: #6464B2;
	text-decoration: underline;
}

table {
	border-collapse: collapse;
	width: 100%;
	border: solid 1px #464699;
	margin-bottom: 3rem;
}
thead {
	background-color: #464699;
	color: white;
}

th {
	padding: 1rem;
	text-align: left;
}

td {
	padding: 1rem;
	word-break:break-all;
}

tbody tr:nth-child(even) {
	background-color: #F7F7F7;
}

ul, ol {
	padding: 0 0 0 1rem;
}

li {
	margin: 0 0 0.5rem;
}

.summary-total {
	background: #464699;
	text-align: center;
	padding: 1rem;
	color: white;
	display: inline-block;
}

.summary-total__number {
	font-size: 4em;
	display: block;
	font-style: normal;
	margin-top: 1rem;
}

	</style>
</head>
<body>
	<h1>CSS Audit</h1>

	<h2>Stylesheets audited</h2>
	<ul>
		{{#stylesheets}}<li><a href="{{.}}">{{.}}</a></li>{{/stylesheets}}
	</ul>

	<p class="summary-total">Total selectors <em class="summary-total__number">{{totalSelectors}}</em></p>
	<p class="summary-total">Total URLs <em class="summary-total__number">{{totalUrls}}</em></p>

	<h2>Selector usage</h2>

	<table>
		<thead><tr><th>Selector</th><th>Uses</th><th>Stylesheet</th></tr></thead>
		<tbody>
		{{#results}}
		<tr>
			<td>{{selector}}</td>
			<td><a href="#{{id}}">{{used}}</a></td>
			<td>{{#stylesheets}}{{.}}{{/stylesheets}}</td>
		</tr>
		{{/results}}
		</tbody>
	</table>

	<h2>Page usage</h2>

	{{#results}}
		<h3 id="{{id}}">Pages where <code>{{selector}}</code> was used</h3>
		<ul>
			{{#urls}}
			<li><a href="{{.}}">{{.}}</a></li>
			{{/urls}}
		</ul>
	{{/results}}
</body>
</html>
